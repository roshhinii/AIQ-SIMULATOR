{
  "name": "aiq-device-emulator-ui",
  "version": "1.0.0",
  "description": "AIQ Device Emulator UI - Angular app with Electron",
  "main": "dist/main.js",
  "homepage": "http://./",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:electron": "npm run build:prod && cp electron/main.js dist/",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run start\" \"wait-on http://localhost:4200 && electron electron/main.js\"",
    "electron:pack": "npm run build:electron && electron-builder",
    "electron:dist": "npm run build:electron && electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/node": "^18.18.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "typescript": "~5.2.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.aiq.device-emulator-ui",
    "productName": "AIQ Device Emulator UI",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "AIQ Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://flender-group@dev.azure.com/flender-group/iiot/_git/aiq-device-simulator-ui"
  },
  "keywords": [],
  "type": "commonjs"
}
